                title: item.title,
                type: item.type,
                category: item.category,
                favorite: item.favorite,
                updatedAt: item.updatedAt
            }
        });
        
    } catch (error) {
        console.error('Update item error:', error);
        res.status(500).json({ error: 'Ø®Ø·Ø§ Ø¯Ø± Ø¨Ù‡â€ŒØ±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ø¢ÛŒØªÙ…' });
    }
});

// Ø­Ø°Ù Ø¢ÛŒØªÙ…
