const vaultRoutes = require('./routes/vault');
const fileRoutes = require('./routes/files');

app.use('/api/auth', authRoutes);
app.use('/api/vault', vaultRoutes);
app.use('/api/files', fileRoutes);

// route Ø§ØµÙ„ÛŒ
