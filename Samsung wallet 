    windowMs: 15 * 60 * 1000, // 15 Ø¯Ù‚ÛŒÙ‚Ù‡
    max: 100 // Ø­Ø¯Ø§Ú©Ø«Ø± 100 Ø¯Ø±Ø®ÙˆØ§Ø³Øª Ø¯Ø± 15 Ø¯Ù‚ÛŒÙ‚Ù‡
});
