const express = require('express');
const mongoose = require('mongoose');
const cors = require('cors');
const helmet = require('helmet');
const rateLimit = require('express-rate-limit');
require('dotenv').config();

const app = express();

// Ù…ÛŒØ¯Ù„ÙˆØ±Ù‡Ø§ÛŒ Ø§Ù…Ù†ÛŒØªÛŒ
app.use(helmet());
app.use(cors({
    origin: process.env.ALLOWED_ORIGINS?.split(',') || ['http://localhost:3000'],
    credentials: true
}));

// Ù…Ø­Ø¯ÙˆØ¯ÛŒØª Ù†Ø±Ø® Ø¯Ø±Ø®ÙˆØ§Ø³Øª
const limiter = rateLimit({
    windowMs: 15 * 60 * 1000, // 15 Ø¯Ù‚ÛŒÙ‚Ù‡
    max: 100 // Ø­Ø¯Ø§Ú©Ø«Ø± 100 Ø¯Ø±Ø®ÙˆØ§Ø³Øª Ø¯Ø± 15 Ø¯Ù‚ÛŒÙ‚Ù‡
});
app.use(limiter);

app.use(express.json({ limit: '10mb' }));
app.use(express.static('../frontend'));

// routes
const authRoutes = require('./routes/auth');
const vaultRoutes = require('./routes/vault');
const fileRoutes = require('./routes/files');

app.use('/api/auth', authRoutes);
app.use('/api/vault', vaultRoutes);
app.use('/api/files', fileRoutes);

// route Ø§ØµÙ„ÛŒ
app.get('/', (req, res) => {
    res.sendFile('index.html', { root: '../frontend' });
});

// route Ù…Ø¯ÛŒØ±ÛŒØª Ø®Ø·Ø§
app.use((err, req, res, next) => {
    console.error(err.stack);
    res.status(500).json({ error: 'Ø®Ø·Ø§ÛŒ Ø³Ø±ÙˆØ± Ø¯Ø§Ø®Ù„ÛŒ' });
});

// Ø§ØªØµØ§Ù„ Ø¨Ù‡ MongoDB
mongoose.connect(process.env.MONGODB_URI || 'mongodb://localhost:27017/samsung-vault', {
    useNewUrlParser: true,
    useUnifiedTopology: true,
})
.then(() => console.log('âœ… Connected to MongoDB'))
.catch(err => console.error('âŒ MongoDB connection error:', err));

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
    console.log(`ğŸš€ Server running on port ${PORT}`);
    console.log(`ğŸ“ Frontend: http://localhost:${PORT}`);
});